<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easynas.server.dao.LoginDao">
    <select id="getUser" parameterType="com.easynas.server.model.User" resultType="com.easynas.server.model.User">
        select username, password_hash
        from user
        where username = #{username}
          and password_hash = #{passwordHash}
    </select>

    <insert id="insertUser" parameterType="com.easynas.server.model.User">
        insert user (username, password_hash)
        values (#{username}, #{passwordHash})
    </insert>
</mapper>